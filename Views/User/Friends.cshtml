@model IEnumerable<Game_Library_2._0.Models.UserProfileModel>

@{
    ViewBag.Title = "Friends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Friends</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            <label>Games Owned</label>
        </th>
        <th>
            <label>Money Spent</label>
        </th>
        <th>
            <label>Average Completion</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(model => item.Games.Count)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoneySpent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AverageCompletion)
        </td>
        <td>
            @Html.ActionLink("Compare", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Remove Friend", "RemoveFriend", new { id=item.Id}, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
