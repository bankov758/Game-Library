@model IEnumerable<Game_Library_2._0.Models.UserModel>

@{
    ViewBag.Title = "NotFriends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NotFriends</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Add Friend", "AddFriend",  new { id=item.Id }, new { @class = "btn btn-info" })
        </td>
    </tr>
}

</table>
