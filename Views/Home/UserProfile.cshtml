@model Game_Library_2._0.Models.UserProfileModel

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            <label>Games Owned</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Games.Count)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MoneySpent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoneySpent)$
        </dd>

        <dt>
            <label>Average Completion</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AverageCompletion)%
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Games)
        </dt>

        @Html.Partial("ListGamesPartial", Model.Games)

    </dl>
</div>
